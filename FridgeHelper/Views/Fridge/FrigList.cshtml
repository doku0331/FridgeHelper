﻿@model IEnumerable<FridgeHelper.Models.Fridges>

@{
    ViewBag.Title = "FrigList";
}
<div class="row">
    <div class="col-md-5">
        <h2>@User.Identity.Name 的冰箱</h2>
    </div>
    <div class="col-md-2">
        @Html.ActionLink("新增", "FrigCreate", "Fridge", new { @class = "btn btn-warning" })
    </div>

</div>
<table class="table">
    <tr>
        <th>
            冰箱
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <div class="alert">
            <strong>目前沒有冰箱，請先新增。</strong>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.ActionLink("打開冰箱", "List", "Food", new { fridgeid = item.fId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("編輯", "FrigEdit", "fridge", new { fridgeid = item.fId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("刪除冰箱", "Delete", "fridge", new { fridgeid = item.fId }, new { onclick = "return confirm('你確定要刪除嗎？');", @class = "btn btn-danger" })
                </td>
            </tr>


        }


    }

</table>
