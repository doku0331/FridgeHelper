@model FridgeHelper.Models.FoodCreateViewModel


@{
    ViewBag.Title = "新增食物";
}

<h2>新增食物</h2>
<hr />

@using (Html.BeginForm("create", "Food", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.NewFood.food_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NewFood.food_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NewFood.food_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NewFood.price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NewFood.price, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.NewFood.price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.ItemImage, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ItemImage, new { type = "file", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ItemImage, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NewFood.type, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("NewFood.type", (IEnumerable<SelectListItem>)ViewBag.type, new { id = "type", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NewFood.type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NewFood.expire_date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NewFood.expire_date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NewFood.expire_date, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NewFood.comment, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.NewFood.comment, new { @class = "form-control",rows = "3" })
            @Html.ValidationMessageFor(model => model.NewFood.comment, "", new { @class = "text-danger" })
        </div>
    </div>


    <input id="fridgeid" name="fridgeId" type="hidden" value="@ViewBag.fridgeId" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="放進冰箱" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("回到冰箱", "List", new { fridgeId = ViewBag.fridgeId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
